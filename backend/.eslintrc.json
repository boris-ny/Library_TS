{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["@typescript-eslint"],
	"parserOptions": {
		"ecmaVersion": "latest", // Adjust based on your supported ECMAScript version
		"sourceType": "module"
	},
	"rules": {
		// Turn off rules that are unnecessary or incompatible with Express
		"@typescript-eslint/explicit-module-boundary-types": "off",
		"@typescript-eslint/no-explicit-any": "off"

		// Additional rules for Express-specific best practices
		 // Enforce async/await usage//
	
	},
	"ignorePatterns": ["dist/*", "node_modules/"]
}
